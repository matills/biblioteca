@model Biblioteca.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-tag"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle"></i> ¿Está seguro de que desea eliminar esta categoría?</h5>
                        <p class="mb-0">Esta acción no se puede deshacer y eliminará toda la información de la categoría.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3"><i class="fas fa-info-circle"></i> Información de la Categoría</h6>
                            <div class="mb-2">
                                <strong>Nombre:</strong> 
                                <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.Nombre)</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <div class="mb-2">
                                    <strong>Descripción:</strong>
                                    <div class="mt-1 p-2 bg-light rounded small">
                                        @(Model.Descripcion.Length > 150 ? Model.Descripcion.Substring(0, 150) + "..." : Model.Descripcion)
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3"><i class="fas fa-chart-bar"></i> Estadísticas de Libros</h6>
                            <div class="row">
                                <div class="col-6">
                                    <div class="card bg-primary text-white text-center">
                                        <div class="card-body py-2">
                                            <h5>@Model.Libros.Count</h5>
                                            <small>Libros</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card bg-success text-white text-center">
                                        <div class="card-body py-2">
                                            <h5>@Model.Libros.Sum(l => l.CantidadDisponible)</h5>
                                            <small>Ejemplares</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Libros.Any())
                    {
                        <div class="alert alert-danger mt-4">
                            <h6><i class="fas fa-ban"></i> No se puede eliminar esta categoría</h6>
                            <p>La categoría tiene <strong>@Model.Libros.Count libro(s)</strong> asignado(s). Debe reasignar todos los libros a otras categorías antes de poder eliminar esta categoría.</p>
                            
                            <h6 class="mt-3">Libros en esta categoría:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Título</th>
                                            <th>Autor</th>
                                            <th>Año</th>
                                            <th>Ejemplares</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var libro in Model.Libros.Take(5))
                                        {
                                            <tr>
                                                <td><strong>@libro.Titulo</strong></td>
                                                <td>@libro.Autor?.Nombre</td>
                                                <td>@libro.AnoPublicacion</td>
                                                <td><span class="badge bg-info">@libro.CantidadDisponible</span></td>
                                            </tr>
                                        }
                                        @if (Model.Libros.Count > 5)
                                        {
                                            <tr>
                                                <td colspan="4" class="text-muted text-center">
                                                    Y @(Model.Libros.Count - 5) libro(s) más...
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            <div class="mt-3">
                                <strong>Sugerencia:</strong> 
                                <a asp-controller="Libros" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Ir a gestionar libros
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mt-4">
                            <h6><i class="fas fa-check-circle"></i> Categoría sin libros</h6>
                            <p class="mb-0">Esta categoría no tiene libros asignados y puede ser eliminada sin problemas.</p>
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="CategoriaId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            @if (!Model.Libros.Any())
                            {
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está completamente seguro de eliminar esta categoría?')">
                                    <i class="fas fa-trash"></i> Confirmar Eliminación
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger" disabled>
                                    <i class="fas fa-ban"></i> No se puede eliminar
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-danger {
        background: linear-gradient(45deg, #dc3545, #c82333);
        border: none;
    }
    
    .btn-secondary {
        background: linear-gradient(45deg, #6c757d, #495057);
        border: none;
    }
    
    .btn-danger:hover, .btn-secondary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .table th {
        background: linear-gradient(45deg, #343a40, #495057) !important;
        border: none;
    }
</style>
