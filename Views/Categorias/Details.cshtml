@model Biblioteca.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-tags"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="text-primary mb-3"><i class="fas fa-info-circle"></i> Información de la Categoría</h5>
                            <div class="mb-3">
                                <strong>Nombre:</strong> 
                                <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.Nombre)</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <div class="mb-3">
                                    <strong>Descripción:</strong>
                                    <div class="mt-2 p-3 bg-light rounded">
                                        @Html.DisplayFor(model => model.Descripcion)
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <strong>Descripción:</strong>
                                    <span class="text-muted">No se ha proporcionado una descripción para esta categoría.</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-books"></i> Libros en esta Categoría</h5>
                </div>
                <div class="card-body">
                    @if (Model.Libros.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Título</th>
                                        <th>Autor</th>
                                        <th>Año</th>
                                        <th>Disponibles</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var libro in Model.Libros.OrderBy(l => l.Titulo))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@libro.Titulo</strong>
                                                @if (!string.IsNullOrEmpty(libro.ImagenPortada))
                                                {
                                                    <br><small class="text-success"><i class="fas fa-image"></i> Con imagen</small>
                                                }
                                            </td>
                                            <td>@libro.Autor?.Nombre</td>
                                            <td>@libro.AnoPublicacion</td>
                                            <td>
                                                @if (libro.CantidadDisponible > 0)
                                                {
                                                    <span class="badge bg-success">@libro.CantidadDisponible</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Agotado</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Libros" asp-action="Details" asp-route-id="@libro.LibroId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-book-open fa-3x mb-3"></i>
                            <p>Esta categoría aún no tiene libros asignados.</p>
                            <a asp-controller="Libros" asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Agregar Primer Libro
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar Categoría
                        </a>
                        @if (!Model.Libros.Any())
                        {
                            <a asp-action="Delete" asp-route-id="@Model.CategoriaId" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar Categoría
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary" disabled title="No se puede eliminar (tiene libros asignados)">
                                <i class="fas fa-ban"></i> No se puede eliminar
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-pie"></i> Estadísticas</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body py-2">
                                    <h4>@Model.Libros.Count</h4>
                                    <small>Libros</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-success text-white">
                                <div class="card-body py-2">
                                    <h4>@Model.Libros.Sum(l => l.CantidadDisponible)</h4>
                                    <small>Ejemplares</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.Libros.Any())
                    {
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Más popular:</strong><br>
                                @{
                                    var libroMasEjemplares = Model.Libros.OrderByDescending(l => l.CantidadDisponible).FirstOrDefault();
                                }
                                @if (libroMasEjemplares != null)
                                {
                                    <text>@libroMasEjemplares.Titulo (@libroMasEjemplares.CantidadDisponible ejemplares)</text>
                                }
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background: linear-gradient(45deg, #ffc107, #fd7e14);
        border: none;
        color: white;
    }
    
    .btn-info {
        background: linear-gradient(45deg, #17a2b8, #007bff);
        border: none;
    }
    
    .btn-warning:hover, .btn-info:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .table th {
        background: linear-gradient(45deg, #343a40, #495057) !important;
        border: none;
    }
</style>
