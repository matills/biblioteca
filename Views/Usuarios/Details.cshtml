@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
    var prestamosActivos = Model.Prestamos.Where(p => p.Estado == "Activo").ToList();
    var prestamosVencidos = Model.Prestamos.Where(p => p.Estado == "Vencido").ToList();
    var prestamosDevueltos = Model.Prestamos.Where(p => p.Estado == "Devuelto").ToList();
    var ultimoPrestamo = Model.Prestamos.OrderByDescending(p => p.FechaPrestamo).FirstOrDefault();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-user"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3"><i class="fas fa-id-card"></i> Información Personal</h5>
                            <div class="mb-2">
                                <strong>Nombre:</strong> @Html.DisplayFor(model => model.Nombre)
                            </div>
                            <div class="mb-2">
                                <strong>Email:</strong> 
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Html.DisplayFor(model => model.Email)</a>
                            </div>
                            <div class="mb-2">
                                <strong>Teléfono:</strong> 
                                <a href="tel:@Model.Telefono" class="text-decoration-none">@Html.DisplayFor(model => model.Telefono)</a>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Direccion))
                            {
                                <div class="mb-2">
                                    <strong>Dirección:</strong> @Html.DisplayFor(model => model.Direccion)
                                </div>
                            }
                            <div class="mb-2">
                                <strong>Fecha de Registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3"><i class="fas fa-chart-pie"></i> Estadísticas</h5>
                            <div class="row">
                                <div class="col-6">
                                    <div class="card bg-success text-white text-center">
                                        <div class="card-body py-2">
                                            <h4>@prestamosActivos.Count</h4>
                                            <small>Activos</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card bg-warning text-white text-center">
                                        <div class="card-body py-2">
                                            <h4>@prestamosVencidos.Count</h4>
                                            <small>Vencidos</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-6">
                                    <div class="card bg-info text-white text-center">
                                        <div class="card-body py-2">
                                            <h4>@prestamosDevueltos.Count</h4>
                                            <small>Devueltos</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card bg-primary text-white text-center">
                                        <div class="card-body py-2">
                                            <h4>@Model.Prestamos.Count</h4>
                                            <small>Total</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if (ultimoPrestamo != null)
                            {
                                <div class="mt-3">
                                    <strong>Último préstamo:</strong><br>
                                    <small class="text-muted">@ultimoPrestamo.FechaPrestamo.ToString("dd/MM/yyyy") - @ultimoPrestamo.Libro.Titulo</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Historial de Préstamos</h5>
                </div>
                <div class="card-body">
                    @if (Model.Prestamos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Libro</th>
                                        <th>Autor</th>
                                        <th>Fecha Préstamo</th>
                                        <th>Fecha Devolución</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prestamo in Model.Prestamos.OrderByDescending(p => p.FechaPrestamo))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@prestamo.Libro.Titulo</strong>
                                            </td>
                                            <td>@prestamo.Libro.Autor.Nombre</td>
                                            <td>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @prestamo.FechaDevolucionEsperada.ToString("dd/MM/yyyy")
                                                @if (prestamo.FechaDevolucionReal.HasValue)
                                                {
                                                    <br><small class="text-success">Real: @prestamo.FechaDevolucionReal.Value.ToString("dd/MM/yyyy")</small>
                                                }
                                            </td>
                                            <td>
                                                @if (prestamo.Estado == "Activo")
                                                {
                                                    @if (prestamo.FechaDevolucionEsperada < DateTime.Now)
                                                    {
                                                        <span class="badge bg-warning">Vencido</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">@prestamo.Estado</span>
                                                    }
                                                }
                                                else if (prestamo.Estado == "Devuelto")
                                                {
                                                    <span class="badge bg-info">@prestamo.Estado</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@prestamo.Estado</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Prestamos" asp-action="Details" asp-route-id="@prestamo.PrestamoId" 
                                                   class="btn btn-info btn-sm" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-book-open fa-3x mb-3"></i>
                            <p>Este usuario aún no tiene préstamos registrados.</p>
                            <a asp-controller="Prestamos" asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Crear Primer Préstamo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Acciones</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Prestamos" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Nuevo Préstamo
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.UsuarioId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar Usuario
                        </a>
                        @if (prestamosActivos.Count == 0)
                        {
                            <a asp-action="Delete" asp-route-id="@Model.UsuarioId" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar Usuario
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary" disabled title="No se puede eliminar (tiene préstamos activos)">
                                <i class="fas fa-ban"></i> No se puede eliminar
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>

            @if (prestamosVencidos.Any())
            {
                <div class="card shadow mt-3">
                    <div class="card-header bg-warning text-white">
                        <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Préstamos Vencidos</h6>
                    </div>
                    <div class="card-body">
                        @foreach (var prestamo in prestamosVencidos.Take(3))
                        {
                            <div class="mb-2 p-2 bg-light rounded">
                                <strong>@prestamo.Libro.Titulo</strong><br>
                                <small class="text-muted">Vencido el @prestamo.FechaDevolucionEsperada.ToString("dd/MM/yyyy")</small>
                            </div>
                        }
                        @if (prestamosVencidos.Count > 3)
                        {
                            <small class="text-muted">Y @(prestamosVencidos.Count - 3) más...</small>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn-success {
        background: linear-gradient(45deg, #28a745, #20c997);
        border: none;
    }
    
    .btn-info {
        background: linear-gradient(45deg, #17a2b8, #007bff);
        border: none;
    }
    
    .btn-warning {
        background: linear-gradient(45deg, #ffc107, #fd7e14);
        border: none;
        color: white;
    }
    
    .btn-success:hover, .btn-info:hover, .btn-warning:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
</style>
